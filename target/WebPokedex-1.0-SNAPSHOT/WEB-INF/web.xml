<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>BasicWebApplication</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ListPokemons</servlet-name>
        <servlet-class>com.example.WebPokedex.ListPokemons</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowPokemon</servlet-name>
        <servlet-class>com.example.WebPokedex.ShowPokemon</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAbility</servlet-name>
        <servlet-class>com.example.WebPokedex.ShowAbility</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAll</servlet-name>
        <servlet-class>com.example.WebPokedex.ShowAll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditName</servlet-name>
        <servlet-class>com.example.WebPokedex.EditName</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewPokemon</servlet-name>
        <servlet-class>com.example.WebPokedex.NewPokemon</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditType</servlet-name>
        <servlet-class>com.example.WebPokedex.EditType</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveType</servlet-name>
        <servlet-class>com.example.WebPokedex.RemoveType</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddEvolution</servlet-name>
        <servlet-class>com.example.WebPokedex.AddEvolution</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListPokemons</servlet-name>
        <url-pattern>/WebPokedex/src/main/webapp/index.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowPokemon</servlet-name>
        <url-pattern>/WebPokedex/src/main/webapp/showPokemon.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAbility</servlet-name>
        <url-pattern>/WebPokedex/src/main/webapp/showAbility.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAll</servlet-name>
        <url-pattern>/WebPokedex/src/main/webapp/showAll.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditName</servlet-name>
        <url-pattern>/WebPokedex/src/main/webapp/editName.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewPokemon</servlet-name>
        <url-pattern>/WebPokedex/src/main/webapp/newPokemon.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditType</servlet-name>
        <url-pattern>/WebPokedex/src/main/webapp/editType.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveType</servlet-name>
        <url-pattern>/WebPokedex/src/main/webapp/removeType.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEvolution</servlet-name>
        <url-pattern>/WebPokedex/src/main/webapp/addEvolution.html</url-pattern>
    </servlet-mapping>
</web-app>